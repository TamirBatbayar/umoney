<%= simple_form_for(@lesson) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :detail %>
    <%= f.select :page_content_id, PageContent.all.map { |lesson_page| [lesson_page.name, lesson_page.id] } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
