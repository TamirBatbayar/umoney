<%= simple_form_for(@page_content) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :content, :as => :ckeditor, :input_html => { :ckeditor => { :height => 400 } } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-lg btn-primary" %>
  </div>
<% end %>
